<% if (success.length > 0) {%>

    <div class="alert alert-success" role="alert">
        <h2><%= success %></h2>
    </div>

<% } else { %>
    <form action="/auth/password/request_reset" method="POST">

        <% if (error.length > 0) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>

        <h2 class="fw-bold mb-2 text-uppercase">Reset Password</h2>
        <p class="text-white-50 mb-5">Please enter your account email in order to recieve an email with password reset instructions!</p>

        <div class="form-outline form-white mb-4">
            <input type="email" name="email" class="form-control form-control-lg" required/>
            <label class="form-label" for="email">Email</label>
        </div>


        <button class="btn btn-outline-light btn-lg px-5" type="submit">Request Password Reset</button>
    </form>
<% } %> 