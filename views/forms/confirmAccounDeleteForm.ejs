<form action="/profile/delete/account" method="POST">
  
      <h2 class="fw-bold mb-2 text-uppercase">Confirm Account Deletion</h2>
      <p class="text-white-50 mb-5">Enter your email and password to confirm the deletion of your account.</p>
  
      <div class="form-outline form-white mb-4">
        <input type="email" name="email" class="form-control form-control-lg" required/>
        <label class="form-label" for="email">Email</label>
      </div>

      <div class="form-outline form-white mb-4">
        <input type="password" name="password" class="form-control form-control-lg" required/>
        <label class="form-label" for="password">Password</label>
      </div>
  
      <button class="btn btn-outline-light btn-lg px-5 mb-5 btn-danger text-uppercase" type="submit">Delete Account</button>
  </form>